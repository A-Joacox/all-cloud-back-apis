{
  "database": "cinema_movies",
  "collections": {
    "movies": {
      "description": "Colección de películas",
      "schema": {
        "_id": "ObjectId",
        "title": "string (required)",
        "description": "string (required)",
        "duration": "number (required, min: 1)",
        "genre": ["string (required)"],
        "director": "string (required)",
        "cast": ["string"],
        "releaseDate": "Date (required)",
        "rating": "number (min: 0, max: 10, default: 0)",
        "posterUrl": "string (default: '')",
        "trailerUrl": "string (default: '')",
        "isActive": "boolean (default: true)",
        "createdAt": "Date (auto-generated)",
        "updatedAt": "Date (auto-generated)"
      },
      "indexes": [
        { "fields": { "title": "text", "description": "text" } },
        { "fields": { "genre": 1 } },
        { "fields": { "isActive": 1 } },
        { "fields": { "releaseDate": 1 } }
      ],
      "sample_documents": [
