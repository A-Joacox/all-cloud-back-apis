    },
    "genres": {
      "description": "Colección de géneros cinematográficos",
      "schema": {
        "_id": "ObjectId",
        "name": "string (required, unique)",
        "description": "string (default: '')",
        "createdAt": "Date (auto-generated)",
        "updatedAt": "Date (auto-generated)"
      },
      "indexes": [
        { "fields": { "name": 1 }, "options": { "unique": true } }
      ],
      "sample_documents": [
        {
          "_id": "507f1f77bcf86cd799439021",
          "name": "Action",
          "description": "Fast-paced and exciting movies with physical stunts and chases",
          "createdAt": "2024-01-01T00:00:00.000Z",
          "updatedAt": "2024-01-01T00:00:00.000Z"
        },
        {
          "_id": "507f1f77bcf86cd799439022",
          "name": "Drama",
          "description": "Serious, plot-driven presentations, portraying realistic characters",
          "createdAt": "2024-01-01T00:00:00.000Z",
          "updatedAt": "2024-01-01T00:00:00.000Z"
        },
        {
          "_id": "507f1f77bcf86cd799439023",
          "name": "Sci-Fi",
          "description": "Science fiction films that explore futuristic concepts",
          "createdAt": "2024-01-01T00:00:00.000Z",
          "updatedAt": "2024-01-01T00:00:00.000Z"
        },
        {
          "_id": "507f1f77bcf86cd799439024",
          "name": "Comedy",
          "description": "Light-hearted plots consistently and deliberately designed to amuse and provoke laughter",
          "createdAt": "2024-01-01T00:00:00.000Z",
          "updatedAt": "2024-01-01T00:00:00.000Z"
        }
      ]
    }
  },
  "relationships": {
    "movies_to_genres": {
      "type": "many-to-many",
      "description": "Las películas pueden tener múltiples géneros, y los géneros pueden estar en múltiples películas",
      "implementation": "Array de strings en el campo 'genre' de movies"
    }
  },
  "aggregation_examples": {
    "popular_genres": {
      "description": "Obtener géneros más populares",
      "pipeline": [
        { "$unwind": "$genre" },
        { "$group": { "_id": "$genre", "count": { "$sum": 1 } } },
        { "$sort": { "count": -1 } }
      ]
    },
    "movies_by_rating": {
      "description": "Obtener películas agrupadas por rango de rating",
      "pipeline": [
        { "$group": { "_id": { "$floor": "$rating" }, "movies": { "$push": "$title" } } },
        { "$sort": { "_id": -1 } }
      ]
    }
  }
}